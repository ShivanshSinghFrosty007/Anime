<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.finalanime">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewTest">
        <activity android:name="com.example.finalanime.Account.Profile"></activity>
        <activity android:name="com.example.finalanime.Account.SetNewPassword" />
        <activity android:name="com.example.finalanime.Account.ForgetPassword" />
        <activity android:name="com.example.finalanime.Account.VerifyPhoneNo" />
        <activity android:name="com.example.finalanime.Account.SignUp" />
        <activity android:name="com.example.finalanime.Account.LogIn" />
        <activity android:name="com.example.finalanime.Search" />
        <activity android:name="com.example.finalanime.EpisodeSelector2" />
        <activity android:name="com.example.finalanime.Categories" />
        <activity android:name="com.example.finalanime.EpisodeSelector" />
        <activity
            android:name="com.example.finalanime.Player"
            android:screenOrientation="landscape" />
        <activity android:name="com.example.finalanime.MainScreen" />
        <activity android:name="com.example.finalanime.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>